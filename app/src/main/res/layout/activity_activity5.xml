<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".switch">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="333dp"
            android:layout_height="584dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="SWITCH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textAlignment="center"
                android:textColor="#3F51B5" android:textSize="30sp" android:textStyle="bold"/>
        <Switch
                android:text="Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/switch6"/>
        <Switch
                android:text="Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/switch5"/>
        <Switch
                android:text="Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/switch4"/>
        <Switch
                android:text="Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/switch3"/>
        <Switch
                android:text="Switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/switch2"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>